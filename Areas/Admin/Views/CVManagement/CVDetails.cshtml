@model TVOnline.Areas.Admin.Models.CVDetailsViewModel
@{
    ViewData["Title"] = "Chi tiết CV";
    Layout = "_AdminLayout";
}

<style>
    .card-body p, .card-body h6, .card-body span {
        color: #333 !important;
    }
    .text-muted {
        color: #555 !important;
    }
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .text-success {
        color: #198754 !important;
    }
    .text-danger {
        color: #dc3545 !important;
    }
    .card-header h6 {
        color: #333 !important;
        font-weight: 600;
    }
    .badge-pending {
        background-color: #f5c71a;
        color: #333;
    }
    .badge-approved {
        background-color: #2dce89;
    }
    .badge-rejected {
        background-color: #f5365c;
    }
    .cv-preview {
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        padding: 1rem;
        background-color: #f8f9fa;
        height: 500px;
        overflow: auto;
    }
    .cv-preview iframe {
        width: 100%;
        height: 100%;
        border: none;
    }
    .info-item {
        margin-bottom: 1rem;
    }
    .info-item .label {
        font-weight: 600;
        margin-bottom: 0.25rem;
    }
    .info-item .value {
        color: #495057;
    }
</style>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="mb-0 opacity-9">Chi tiết CV</h4>
                            <p class="opacity-8 mb-0">Thông tin chi tiết về CV của @Model.UserName</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("UserCVs", "CVManagement", new { area = "Admin", userId = Model.UserName })" class="btn btn-outline-light">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header p-3">
                    <h6 class="mb-0">Thông tin CV</h6>
                </div>
                <div class="card-body p-3">
                    <div class="info-item">
                        <div class="label">ID CV</div>
                        <div class="value">@Model.CvID</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Người dùng</div>
                        <div class="value">@Model.UserName</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Email</div>
                        <div class="value">@Model.UserEmail</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Vị trí ứng tuyển</div>
                        <div class="value">@Model.PostTitle</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Công ty</div>
                        <div class="value">@Model.PostCompany</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Ngày nộp</div>
                        <div class="value">@Model.AppliedDate.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="info-item">
                        <div class="label">Trạng thái</div>
                        <div class="value">
                            @{
                                string badgeClass = "badge-pending";
                                string statusText = "Đang chờ";
                                
                                if (Model.CVStatus == "Approved")
                                {
                                    badgeClass = "badge-approved";
                                    statusText = "Đã duyệt";
                                }
                                else if (Model.CVStatus == "Rejected")
                                {
                                    badgeClass = "badge-rejected";
                                    statusText = "Đã từ chối";
                                }
                            }
                            <span class="badge @badgeClass">@statusText</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header p-3">
                    <h6 class="mb-0">Cập nhật trạng thái</h6>
                </div>
                <div class="card-body p-3">
                    <form asp-action="UpdateCVStatus" asp-controller="CVManagement" asp-area="Admin" method="post">
                        <input type="hidden" name="cvId" value="@Model.CvID" />
                        
                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <select name="status" class="form-select">
                                @if (Model.CVStatus == "Pending")
                                {
                                    <option value="Pending" selected>Đang chờ</option>
                                }
                                else
                                {
                                    <option value="Pending">Đang chờ</option>
                                }
                                
                                @if (Model.CVStatus == "Approved")
                                {
                                    <option value="Approved" selected>Duyệt</option>
                                }
                                else
                                {
                                    <option value="Approved">Duyệt</option>
                                }
                                
                                @if (Model.CVStatus == "Rejected")
                                {
                                    <option value="Rejected" selected>Từ chối</option>
                                }
                                else
                                {
                                    <option value="Rejected">Từ chối</option>
                                }
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Ghi chú</label>
                            <textarea name="notes" class="form-control" rows="4">@Model.EmployerNotes</textarea>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-save me-1"></i> Cập nhật
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header p-3">
                    <h6 class="mb-0">Xem trước CV</h6>
                </div>
                <div class="card-body p-3">
                    <div class="cv-preview">
                        @if (!string.IsNullOrEmpty(Model.CVFileUrl))
                        {
                            if (Model.CVFileUrl.EndsWith(".pdf"))
                            {
                                <iframe src="@Model.CVFileUrl" type="application/pdf"></iframe>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-file-alt fa-4x mb-3 text-primary"></i>
                                    <h5>Không thể hiển thị trực tiếp</h5>
                                    <p class="mb-4">CV không phải định dạng PDF</p>
                                    <a href="@Model.CVFileUrl" class="btn btn-primary" target="_blank">
                                        <i class="fas fa-download me-1"></i> Tải xuống
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <i class="fas fa-file-alt fa-4x mb-3 text-muted"></i>
                                <h5>Không có CV</h5>
                                <p>Không tìm thấy file CV</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
