<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="description" content="TVOnline Admin Dashboard" />
	<meta name="author" content="TVOnline" />
	<title>@ViewData["Title"] - TVOnline Admin</title>
	<link href="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/style.min.css" rel="stylesheet" />
	<link href="~/admin/css/styles.css" rel="stylesheet" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
	<style>
		.navbar-toggler {
			padding: 0.5rem;
			font-size: 1.25rem;
			border: none;
		}
		.navbar-toggler:focus {
			box-shadow: none;
		}
		.navbar-toggler-icon {
			width: 1.5em;
			height: 1.5em;
		}
		@@media (max-width: 992px) {
			.sidebar-toggle {
				display: none;
			}
		}
	</style>
</head>
<body class="sb-nav-fixed">
	<nav class="sb-topnav navbar navbar-expand-lg navbar-dark bg-dark">
		<!-- Navbar Brand-->
		<a class="navbar-brand ps-3" href="@Url.Action("Index", "AdminDashboard", new { area = "Admin" })">TVOnline Admin</a>
		
		<!-- Sidebar Toggle (visible only on large screens)-->
		<button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0 sidebar-toggle" id="sidebarToggle">
			<i class="fas fa-bars"></i>
		</button>
		
		<!-- Hamburger Menu (visible only on mobile)-->
		<button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		
		<!-- Navbar Content -->
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav ms-auto mb-2 mb-lg-0">
				<!-- Mobile Menu Items (visible only on small screens) -->
				<li class="nav-item d-lg-none">
					<a class="nav-link" href="@Url.Action("Index", "AdminDashboard", new { area = "Admin" })">
						<i class="fas fa-tachometer-alt me-2"></i>Bảng điều khiển
					</a>
				</li>
				<li class="nav-item d-lg-none">
					<a class="nav-link" href="@Url.Action("ManageUsers", "UserManagement", new { area = "Admin" })">
						<i class="fas fa-users me-2"></i>Quản lý người dùng
					</a>
				</li>
				<li class="nav-item d-lg-none">
					<a class="nav-link" href="@Url.Action("ManagePosts", "PostManagement", new { area = "Admin" })">
						<i class="fas fa-file-alt me-2"></i>Quản lý bài đăng
					</a>
				</li>
				<li class="nav-item d-lg-none">
					<hr class="dropdown-divider bg-light my-2">
				</li>
				
				<!-- User Menu (visible on all screen sizes) -->
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="fas fa-user fa-fw me-1"></i>Admin
					</a>
					<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
						<li><a class="dropdown-item" href="/" target="_blank"><i class="fas fa-home me-2"></i>Trang chủ website</a></li>
						<li><hr class="dropdown-divider" /></li>
						<li><a class="dropdown-item" href="@Url.Action("Logout", "AdminDashboard", new { area = "Admin" })"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
					</ul>
				</li>
			</ul>
		</div>
	</nav>
	
	<div id="layoutSidenav">
		<div id="layoutSidenav_nav">
			<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
				<div class="sb-sidenav-menu">
					<div class="nav">
						<div class="sb-sidenav-menu-heading">TỔNG QUAN</div>
						<a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "AdminDashboard" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" href="@Url.Action("Index", "AdminDashboard", new { area = "Admin" })">
							<div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
							Bảng điều khiển
						</a>
						
						<div class="sb-sidenav-menu-heading">QUẢN LÝ HỆ THỐNG</div>
						<a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "UserManagement" ? "active" : "")" href="@Url.Action("ManageUsers", "UserManagement", new { area = "Admin" })">
							<div class="sb-nav-link-icon"><i class="fas fa-users"></i></div>
							Quản lý người dùng
						</a>
						<a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "PostManagement" ? "active" : "")" href="@Url.Action("ManagePosts", "PostManagement", new { area = "Admin" })">
							<div class="sb-nav-link-icon"><i class="fas fa-file-alt"></i></div>
							Quản lý bài đăng
						</a>
						<a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "CVManagement" ? "active" : "")" href="@Url.Action("Index", "CVManagement", new { area = "Admin" })">
							<div class="sb-nav-link-icon"><i class="fas fa-file-pdf"></i></div>
							Quản lý CV
						</a>
						<a class="nav-link @(ViewContext.RouteData.Values["Controller"].ToString() == "CVTemplate" ? "active" : "")" href="@Url.Action("Index", "CVTemplate", new { area = "Admin" })">
							<div class="sb-nav-link-icon"><i class="fas fa-file-invoice"></i></div>
							Quản lý mẫu CV
						</a>
						
						<div class="sb-sidenav-menu-heading">LIÊN KẾT NHANH</div>
						<a class="nav-link" href="/" target="_blank">
							<div class="sb-nav-link-icon"><i class="fas fa-home"></i></div>
							Trang chủ website
						</a>
						<a class="nav-link" href="@Url.Action("Logout", "AdminDashboard", new { area = "Admin" })">
							<div class="sb-nav-link-icon"><i class="fas fa-sign-out-alt"></i></div>
							Đăng xuất
						</a>
					</div>
				</div>
				<div class="sb-sidenav-footer">
					<div class="small">Đăng nhập với:</div>
					admin@tvonline.com
				</div>
			</nav>
		</div>
		<div id="layoutSidenav_content">
			<main>
				<div class="container-fluid px-4">
					<h1 class="mt-4">@ViewData["Title"]</h1>
					<ol class="breadcrumb mb-4">
						<li class="breadcrumb-item"><a href="@Url.Action("Index", "AdminDashboard", new { area = "Admin" })">Bảng điều khiển</a></li>
						<li class="breadcrumb-item active">@ViewData["Title"]</li>
					</ol>
					@RenderBody()
				</div>
			</main>
			<footer class="py-4 bg-light mt-auto">
				<div class="container-fluid px-4">
					<div class="d-flex align-items-center justify-content-between small">
						<div class="text-muted">Copyright &copy; TVOnline @DateTime.Now.Year</div>
						<div>
							<a href="#">Chính sách bảo mật</a>
							&middot;
							<a href="#">Điều khoản &amp; Điều kiện</a>
						</div>
					</div>
				</div>
			</footer>
		</div>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script>
		// Toggle sidebar
		document.getElementById('sidebarToggle').addEventListener('click', function() {
			document.body.classList.toggle('sb-sidenav-toggled');
		});
		
		// Auto-close mobile menu after clicking a link
		document.querySelectorAll('.navbar-nav .nav-link').forEach(link => {
			link.addEventListener('click', () => {
				const navbarCollapse = document.getElementById('navbarSupportedContent');
				if (window.getComputedStyle(navbarCollapse).display !== 'none') {
					const bsCollapse = new bootstrap.Collapse(navbarCollapse);
					bsCollapse.hide();
				}
			});
		});
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>