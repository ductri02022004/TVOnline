@model TVOnline.Areas.Admin.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<style>
    .card-body p, .card-body h6, .card-body span:not(.text-white) {
        color: #333 !important;
    }
    .text-muted {
        color: #555 !important;
    }
    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .text-success {
        color: #198754 !important;
    }
    .text-danger {
        color: #dc3545 !important;
    }
    .card-header h6 {
        color: #333 !important;
        font-weight: 600;
    }
</style>

<div class="container-fluid py-4">
    <!-- Thống kê tổng quan -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-8">
                            <h4 class=" mb-0 opacity-9">Chào mừng đến với Trang quản trị</h4>
                            <p class=" opacity-8 mb-0">Tổng quan về hoạt động của hệ thống TVOnline</p>
                        </div>
                        <div class="col-md-4 text-end">
                            <h6 class=" mb-0 opacity-8">Ngày hiện tại: @DateTime.Now.ToString("dd/MM/yyyy")</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê số liệu -->
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Tổng số người dùng</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalUsers
                                    <span class="text-success text-sm font-weight-bolder">
                                        <i class="fa fa-arrow-up"></i> 
                                        @(Model.NewUsersThisMonth) mới tháng này
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="bi bi-people-fill text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="@Url.Action("ManageUsers", "UserManagement", new { area = "Admin" })" class="btn btn-link text-primary text-sm mb-0 p-0 w-100 text-center">
                        <i class="bi bi-arrow-right-circle me-1"></i> Quản lý người dùng
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Nhà tuyển dụng</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalEmployers
                                    <span class="text-success text-sm font-weight-bolder">
                                        <i class="fa fa-building"></i> 
                                        @(Math.Round((double)Model.TotalEmployers / Model.TotalUsers * 100, 1))%
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                                <i class="bi bi-building text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="@Url.Action("ManageUsers", "UserManagement", new { area = "Admin", role = "Employer" })" class="btn btn-link text-success text-sm mb-0 p-0 w-100 text-center">
                        <i class="bi bi-arrow-right-circle me-1"></i> Xem nhà tuyển dụng
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Người tìm việc</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalJobSeekers
                                    <span class="text-info text-sm font-weight-bolder">
                                        <i class="fa fa-user-tie"></i> 
                                        @(Math.Round((double)Model.TotalJobSeekers / Model.TotalUsers * 100, 1))%
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                <i class="bi bi-person-badge text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="@Url.Action("ManageUsers", "UserManagement", new { area = "Admin", role = "JobSeeker" })" class="btn btn-link text-info text-sm mb-0 p-0 w-100 text-center">
                        <i class="bi bi-arrow-right-circle me-1"></i> Xem người tìm việc
                    </a>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card overflow-hidden">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Bài đăng</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.TotalPosts
                                    <span class="text-warning text-sm font-weight-bolder">
                                        <i class="fa fa-file-alt"></i> 
                                        @(Model.NewPostsThisMonth) mới tháng này
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                                <i class="bi bi-file-earmark-text text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="@Url.Action("ManagePosts", "PostManagement", new { area = "Admin" })" class="btn btn-link text-warning text-sm mb-0 p-0 w-100 text-center">
                        <i class="bi bi-arrow-right-circle me-1"></i> Quản lý bài đăng
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Thống kê người dùng Premium -->
    <div class="row mb-4">
        <div class="col-xl-8 col-lg-7">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <div class="d-flex justify-content-between">
                        <h6 class="mb-0">Thống kê người dùng Premium</h6>
                        <a href="@Url.Action("ManageUsers", "UserManagement", new { area = "Admin", role = "Premium" })" class="btn btn-link text-primary text-gradient px-3 mb-0">
                            <i class="bi bi-star-fill me-2"></i> Xem tất cả
                        </a>
                    </div>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="premium-users-chart" class="chart-canvas" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="card h-100">
                <div class="card-header pb-0 p-3">
                    <h6 class="mb-0">Phân loại người dùng</h6>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="user-types-chart" class="chart-canvas" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quản lý hệ thống -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header pb-0 p-3">
                    <h6 class="mb-0">Quản lý hệ thống</h6>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card card-body border-0 shadow-sm">
                                <div class="d-flex align-items-center">
                                    <div class="icon icon-shape icon-md bg-gradient-primary shadow text-center border-radius-md">
                                        <i class="bi bi-people-fill text-lg opacity-10"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h6 class="mb-0">Quản lý người dùng</h6>
                                        <p class="text-sm mb-0">Quản lý tài khoản, phân quyền và trạng thái</p>
                                    </div>
                                </div>
                                <hr class="horizontal dark my-3">
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("ManageUsers", "UserManagement", new { area = "Admin" })" class="btn btn-outline-primary btn-sm mb-0">
                                        <i class="bi bi-person-gear me-1"></i> Quản lý người dùng
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-4">
                            <div class="card card-body border-0 shadow-sm">
                                <div class="d-flex align-items-center">
                                    <div class="icon icon-shape icon-md bg-gradient-warning shadow text-center border-radius-md">
                                        <i class="bi bi-file-earmark-text text-lg opacity-10"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h6 class="mb-0">Quản lý bài đăng</h6>
                                        <p class="text-sm mb-0">Kiểm duyệt và quản lý nội dung bài đăng</p>
                                    </div>
                                </div>
                                <hr class="horizontal dark my-3">
                                <div class="d-flex justify-content-between">
                                    <a href="@Url.Action("ManagePosts", "PostManagement", new { area = "Admin" })" class="btn btn-outline-warning btn-sm mb-0">
                                        <i class="bi bi-file-earmark-text me-1"></i> Quản lý bài đăng
                                    </a>

                                </div>
                            </div>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ người dùng Premium
        var premiumUsersCtx = document.getElementById('premium-users-chart').getContext('2d');
        var premiumUsersChart = new Chart(premiumUsersCtx, {
            type: 'line',
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6'],
                datasets: [{
                    label: 'Người dùng Premium',
                    data: [12, 19, 25, 32, 40, 45],
                    backgroundColor: 'rgba(66, 135, 245, 0.2)',
                    borderColor: 'rgba(66, 135, 245, 1)',
                    borderWidth: 2,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Biểu đồ phân loại người dùng
        var userTypesCtx = document.getElementById('user-types-chart').getContext('2d');
        var userTypesChart = new Chart(userTypesCtx, {
            type: 'doughnut',
            data: {
                labels: ['Nhà tuyển dụng', 'Người tìm việc', 'Premium'],
                datasets: [{
                    data: [@Model.TotalEmployers, @Model.TotalJobSeekers, @(Model.TotalPremiumUsers ?? 0)],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 206, 86, 0.8)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
