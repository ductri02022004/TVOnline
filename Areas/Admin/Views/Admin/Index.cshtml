@model TVOnline.Areas.Admin.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Tổng người dùng</p>
                                <h5 class="font-weight-bolder">
                                    @Model.TotalUsers
                                </h5>
                                <p class="mb-0">
                                    <a href="@Url.Action("ManageUsers", "Admin", new { area = "Admin" })" class="text-success text-sm font-weight-bolder">Quản lý người dùng</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow-primary text-center rounded-circle">
                                <i class="fas fa-users text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Nhà tuyển dụng</p>
                                <h5 class="font-weight-bolder">
                                    @Model.TotalEmployers
                                </h5>
                                <p class="mb-0">
                                    <span class="text-success text-sm font-weight-bolder">Đã đăng ký</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow-success text-center rounded-circle">
                                <i class="fas fa-building text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Người tìm việc</p>
                                <h5 class="font-weight-bolder">
                                    @Model.TotalJobSeekers
                                </h5>
                                <p class="mb-0">
                                    <span class="text-success text-sm font-weight-bolder">Đã đăng ký</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-info shadow-info text-center rounded-circle">
                                <i class="fas fa-user-tie text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">Bài đăng</p>
                                <h5 class="font-weight-bolder">
                                    @Model.TotalPosts
                                </h5>
                                <p class="mb-0">
                                    <a href="@Url.Action("ManagePosts", "Admin", new { area = "Admin" })" class="text-success text-sm font-weight-bolder">Quản lý bài đăng</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow-warning text-center rounded-circle">
                                <i class="fas fa-file-alt text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-lg-12 mb-lg-0 mb-4">
            <div class="card z-index-2 h-100">
                <div class="card-header pb-0 pt-3 bg-transparent">
                    <h6 class="text-capitalize">Chào mừng đến với Trang quản trị</h6>
                    <p class="text-sm mb-0">
                        <i class="fa fa-arrow-up text-success"></i>
                        <span class="font-weight-bold">Quản lý</span> tất cả hoạt động của hệ thống
                    </p>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card mb-4">
                                    <div class="card-header pb-0">
                                        <h6>Quản lý người dùng</h6>
                                    </div>
                                    <div class="card-body px-0 pt-0 pb-2">
                                        <div class="p-3">
                                            <p>Quản lý tất cả người dùng trong hệ thống, bao gồm:</p>
                                            <ul>
                                                <li>Xem thông tin chi tiết người dùng</li>
                                                <li>Khóa/mở khóa tài khoản</li>
                                                <li>Xác nhận email cho người dùng</li>
                                            </ul>
                                            <a href="@Url.Action("ManageUsers", "Admin", new { area = "Admin" })" class="btn btn-primary">Quản lý người dùng</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card mb-4">
                                    <div class="card-header pb-0">
                                        <h6>Quản lý bài đăng</h6>
                                    </div>
                                    <div class="card-body px-0 pt-0 pb-2">
                                        <div class="p-3">
                                            <p>Quản lý tất cả bài đăng trong hệ thống, bao gồm:</p>
                                            <ul>
                                                <li>Xem thông tin chi tiết bài đăng</li>
                                                <li>Kích hoạt/vô hiệu hóa bài đăng</li>
                                                <li>Xóa bài đăng không phù hợp</li>
                                            </ul>
                                            <a href="@Url.Action("ManagePosts", "Admin", new { area = "Admin" })" class="btn btn-primary">Quản lý bài đăng</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
