@model TVOnline.Areas.Admin.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="avatar-lg bg-gradient-primary rounded-circle text-white me-4">
                            <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                        <div>
                            <h3 class="mb-1">Tổng quan hệ thống</h3>
                            <p class="text-muted mb-0">Xin chào Admin, chào mừng bạn đến với bảng điều khiển.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">TỔNG NGƯỜI DÙNG</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.UserCount
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="fas fa-users text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mb-0 text-end">
                        <a href="@Url.Action("ManageUsers", "Admin", new { area = "Admin" })" class="text-primary text-sm font-weight-bold">Quản lý người dùng</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">NHÀ TUYỂN DỤNG</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.EmployerCount
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                <i class="fas fa-building text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mb-0 text-end">
                        <a href="#" class="text-primary text-sm font-weight-bold">Đã đăng ký</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">NGƯỜI TÌM VIỆC</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.JobSeekerCount
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                                <i class="fas fa-user-tie text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mb-0 text-end">
                        <a href="#" class="text-primary text-sm font-weight-bold">Đã đăng ký</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-4">
            <div class="card h-100">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-uppercase font-weight-bold">BÀI ĐĂNG</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @ViewBag.PostCount
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                                <i class="fas fa-file-alt text-lg opacity-10" aria-hidden="true"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mb-0 text-end">
                        <a href="@Url.Action("ManagePosts", "Admin", new { area = "Admin" })" class="text-primary text-sm font-weight-bold">Quản lý bài đăng</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header p-3 pb-0">
                    <h6 class="mb-1">Trang quản trị</h6>
                    <p class="text-sm mb-0">Chào mừng đến với trang quản trị TVOnline</p>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="card card-body border card-plain border-radius-lg h-100">
                                <h6 class="mb-0">Quản lý người dùng</h6>
                                <p class="mb-0 text-sm">Quản lý tất cả người dùng trong hệ thống, bao gồm:</p>
                                <ul class="ps-4 mb-0">
                                    <li><span class="text-dark">Xem thông tin chi tiết người dùng</span></li>
                                    <li><span class="text-dark">Khóa/mở khóa tài khoản</span></li>
                                    <li><span class="text-dark">Xác nhận email cho người dùng</span></li>
                                </ul>
                                <a href="@Url.Action("ManageUsers", "Admin", new { area = "Admin" })" class="btn btn-sm btn-primary mt-3">Quản lý người dùng</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="card card-body border card-plain border-radius-lg h-100">
                                <h6 class="mb-0">Quản lý bài đăng</h6>
                                <p class="mb-0 text-sm">Quản lý tất cả bài đăng trong hệ thống, bao gồm:</p>
                                <ul class="ps-4 mb-0">
                                    <li><span class="text-dark">Xem thông tin chi tiết bài đăng</span></li>
                                    <li><span class="text-dark">Kích hoạt/vô hiệu hóa bài đăng</span></li>
                                    <li><span class="text-dark">Xóa bài đăng không phù hợp</span></li>
                                </ul>
                                <a href="@Url.Action("ManagePosts", "Admin", new { area = "Admin" })" class="btn btn-sm btn-primary mt-3">Quản lý bài đăng</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
