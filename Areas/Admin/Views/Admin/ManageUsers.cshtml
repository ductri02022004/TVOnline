@model List<TVOnline.Areas.Admin.Models.UserViewModel>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Danh sách người dùng</h6>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Người dùng</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Vai trò</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Trạng thái</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Email xác nhận</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div>
                                                    <img src="https://ui-avatars.com/api/?name=@user.UserName&background=random" class="avatar avatar-sm me-3" alt="user1">
                                                </div>
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@user.UserName</h6>
                                                    <p class="text-xs text-secondary mb-0">@user.Email</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">
                                                @foreach (var role in user.Roles)
                                                {
                                                    <span class="badge bg-gradient-primary">@role</span>
                                                }
                                            </p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            @if (user.IsLocked)
                                            {
                                                <span class="badge badge-sm bg-gradient-danger">Đã khóa</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-success">Hoạt động</span>
                                            }
                                        </td>
                                        <td class="align-middle text-center">
                                            @if (user.EmailConfirmed)
                                            {
                                                <span class="badge badge-sm bg-gradient-success">Đã xác nhận</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-sm bg-gradient-warning">Chưa xác nhận</span>
                                            }
                                        </td>
                                        <td class="align-middle">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("UserDetails", "Admin", new { area = "Admin", id = user.Id })" class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (!user.Roles.Contains("Admin"))
                                                {
                                                    if (user.IsLocked)
                                                    {
                                                        <form method="post" action="@Url.Action("UnlockUser", "Admin", new { area = "Admin", id = user.Id })">
                                                            <button type="submit" class="btn btn-sm btn-success">
                                                                <i class="fas fa-unlock"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form method="post" action="@Url.Action("LockUser", "Admin", new { area = "Admin", id = user.Id })">
                                                            <button type="submit" class="btn btn-sm btn-warning">
                                                                <i class="fas fa-lock"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                }
                                                @if (!user.EmailConfirmed)
                                                {
                                                    <form method="post" action="@Url.Action("ConfirmEmail", "Admin", new { area = "Admin", id = user.Id })">
                                                        <button type="submit" class="btn btn-sm btn-primary">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    </form>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
