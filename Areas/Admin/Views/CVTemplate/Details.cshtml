@model TVOnline.Models.CVTemplate

@{
    ViewData["Title"] = "Chi tiết mẫu CV";
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-info-circle me-1"></i>
        Chi tiết mẫu CV
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <h5 class="fw-bold">Thông tin cơ bản</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Mã mẫu CV:</dt>
                        <dd class="col-sm-8">@Model.TemplateId</dd>
                        
                        <dt class="col-sm-4">Tên mẫu CV:</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        
                        <dt class="col-sm-4">Trạng thái:</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Đang hoạt động</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Không hoạt động</span>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                        
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-4">Cập nhật lần cuối:</dt>
                            <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm:ss")</dd>
                        }
                    </dl>
                </div>
                
                <div class="mb-4">
                    <h5 class="fw-bold">Mô tả</h5>
                    <hr />
                    <p>@Model.Description</p>
                </div>
                
                <div class="mb-4">
                    <h5 class="fw-bold">Hình ảnh thu nhỏ</h5>
                    <hr />
                    @if (!string.IsNullOrEmpty(Model.ThumbnailPath))
                    {
                        <img src="@Model.ThumbnailPath" alt="@Model.Name" class="img-fluid img-thumbnail" style="max-width: 300px;" />
                    }
                    else
                    {
                        <p class="text-muted">Không có hình ảnh</p>
                    }
                </div>
            </div>
            
            <div class="col-md-6">
                <div class="mb-4">
                    <h5 class="fw-bold">Mã HTML</h5>
                    <hr />
                    <pre class="bg-light p-3 rounded"><code class="html">@Model.HtmlContent</code></pre>
                </div>
                
                <div class="mb-4">
                    <h5 class="fw-bold">Mã CSS</h5>
                    <hr />
                    <pre class="bg-light p-3 rounded"><code class="css">@Model.CssContent</code></pre>
                </div>
            </div>
        </div>
        
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
            <div>
                <a asp-action="Preview" asp-route-id="@Model.TemplateId" class="btn btn-info" target="_blank">
                    <i class="fas fa-eye me-1"></i> Xem trước
                </a>
                <a asp-action="Edit" asp-route-id="@Model.TemplateId" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i> Chỉnh sửa
                </a>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="fas fa-trash me-1"></i> Xóa
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa mẫu CV <strong>@Model.Name</strong>? Hành động này không thể hoàn tác!
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.TemplateId" />
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js"></script>
    <script>
        $(document).ready(function() {
            hljs.highlightAll();
        });
    </script>
}
