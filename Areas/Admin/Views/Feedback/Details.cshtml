@model TVOnline.Models.Feedbacks

@{
    ViewData["Title"] = "Chi tiết phản hồi";
}

<div class="card mb-4">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-comment-dots me-1"></i>
                Chi tiết phản hồi
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <strong>
                                    @if (Model.User != null)
                                    {
                                        @Model.User.UserName
                                    }
                                    else if (Model.Employer != null)
                                    {
                                        <span>@Model.Employer.CompanyName <span class="badge bg-info">Nhà tuyển dụng</span></span>
                                    }
                                    else
                                    {
                                        <span>Người dùng ẩn danh</span>
                                    }
                                </strong>
                            </div>
                            <div>
                                <span class="text-muted">@Model.Date.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="rating mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.Rating)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    else
                                    {
                                        <i class="far fa-star text-warning"></i>
                                    }
                                }
                                <span class="ms-2">(@Model.Rating/5)</span>
                            </div>
                            <div class="feedback-content">
                                @if (string.IsNullOrEmpty(Model.Content))
                                {
                                    <p class="text-muted fst-italic">Không có nội dung phản hồi.</p>
                                }
                                else
                                {
                                    <p>@Model.Content</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <i class="fas fa-info-circle me-1"></i> Thông tin
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>ID:</span>
                                <span class="text-muted">@Model.FeedbackId</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Người gửi:</span>
                                <span class="text-muted">
                                    @if (Model.User != null)
                                    {
                                        @Model.User.UserName
                                    }
                                    else if (Model.Employer != null)
                                    {
                                        @Model.Employer.CompanyName
                                    }
                                    else
                                    {
                                        <span>Ẩn danh</span>
                                    }
                                </span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Đánh giá:</span>
                                <span class="text-muted">@Model.Rating/5</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Ngày gửi:</span>
                                <span class="text-muted">@Model.Date.ToString("dd/MM/yyyy HH:mm")</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="mt-3">
                    <a asp-action="Reply" asp-route-id="@Model.FeedbackId" class="btn btn-primary w-100 mb-2">
                        <i class="fas fa-reply me-1"></i> Phản hồi
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.FeedbackId" class="btn btn-danger w-100">
                        <i class="fas fa-trash me-1"></i> Xóa phản hồi
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
