@model TVOnline.Utils.PaginatedList<TVOnline.Models.Feedbacks>

@{
    ViewData["Title"] = "Phản hồi của " + ViewData["UserName"];
    bool isEmployer = (bool)ViewData["IsEmployer"];
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
            <i class="fas fa-comments me-1"></i>
            Phản hồi của 
            @if (isEmployer)
            {
                <span>@ViewData["UserName"] <span class="badge bg-info">Nhà tuyển dụng</span></span>
            }
            else
            {
                <span>@ViewData["UserName"]</span>
            }
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i> Quay lại danh sách
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="UserFeedbacks" method="get" class="mb-3">
            <input type="hidden" name="id" value="@Context.Request.RouteValues["id"]" />
            <div class="input-group">
                <input type="text" class="form-control" name="SearchString" value="@ViewData["CurrentFilter"]" placeholder="Tìm kiếm theo nội dung...">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i>
                </button>
                <a asp-action="UserFeedbacks" asp-route-id="@Context.Request.RouteValues["id"]" class="btn btn-secondary">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </form>

        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="feedbackTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nội dung</th>
                        <th>
                            <a asp-action="UserFeedbacks" asp-route-id="@Context.Request.RouteValues["id"]" asp-route-sortOrder="@ViewData["RatingSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                Đánh giá
                            </a>
                        </th>
                        <th>
                            <a asp-action="UserFeedbacks" asp-route-id="@Context.Request.RouteValues["id"]" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">
                                Ngày gửi
                            </a>
                        </th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (string.IsNullOrEmpty(item.Content))
                                {
                                    <span class="text-muted">Không có nội dung</span>
                                }
                                else
                                {
                                    <span>@(item.Content.Length > 100 ? item.Content.Substring(0, 100) + "..." : item.Content)</span>
                                }
                            </td>
                            <td>
                                <div class="rating">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Rating)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-warning"></i>
                                        }
                                    }
                                </div>
                            </td>
                            <td>@item.Date.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.AdminReply))
                                {
                                    <span class="badge bg-success">Đã phản hồi</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Chưa phản hồi</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Details" asp-route-id="@item.FeedbackId" class="btn btn-info btn-sm">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Reply" asp-route-id="@item.FeedbackId" class="btn btn-primary btn-sm">
                                        <i class="fas fa-reply"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.FeedbackId" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="UserFeedbacks" asp-route-id="@Context.Request.RouteValues["id"]" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex - 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]">Trước</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Trước</span>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link" asp-action="UserFeedbacks" asp-route-id="@Context.Request.RouteValues["id"]" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@i" asp-route-currentFilter="@ViewData["CurrentFilter"]">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="UserFeedbacks" asp-route-id="@Context.Request.RouteValues["id"]" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-pageNumber="@(Model.PageIndex + 1)" asp-route-currentFilter="@ViewData["CurrentFilter"]">Tiếp</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">Tiếp</span>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Hiệu ứng khi hover vào hàng trong bảng
            $('#feedbackTable tbody tr').hover(
                function () { $(this).addClass('table-active'); },
                function () { $(this).removeClass('table-active'); }
            );
        });
    </script>
}
