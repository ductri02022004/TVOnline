@model TVOnline.Models.PremiumUser

@{
    ViewData["Title"] = "Premium Dashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Chào mừng đến với Premium Dashboard</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Template CV</h5>
                                    <p class="card-text">Truy cập các template CV chuyên nghiệp</p>
                                    <a asp-area="Premium" asp-controller="Template" asp-action="Index" class="btn btn-primary">Xem Templates</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Công việc đã lưu</h5>
                                    <p class="card-text">Xem danh sách công việc đã lưu</p>
                                    <a asp-controller="Account" asp-action="GetSavedJobs" class="btn btn-primary">Xem danh sách</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Lịch sử giao dịch</h5>
                                    <p class="card-text">Xem lịch sử các giao dịch premium</p>
                                    <a asp-controller="Payment" asp-action="PaymentHistory" class="btn btn-primary">Xem lịch sử</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 