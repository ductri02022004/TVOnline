@model IEnumerable<TVOnline.Models.CVTemplate>

@{
    ViewData["Title"] = "Mẫu CV Premium";
    Layout = "~/Areas/Premium/Views/Shared/_PremiumLayout.cshtml";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold text-primary">Mẫu CV Premium</h2>
            <p class="lead text-muted">Chọn một trong những mẫu CV chuyên nghiệp dưới đây để tạo CV ấn tượng</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            foreach (var template in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0 rounded-3 hover-shadow">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(template.ThumbnailPath))
                            {
                                <img src="@Url.Content(template.ThumbnailPath)" class="card-img-top rounded-top" alt="@template.Name" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-light rounded-top text-center py-5" style="height: 200px;">
                                    <i class="fas fa-file-alt fa-4x text-secondary mt-4"></i>
                                </div>
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@template.Name</h5>
                            <p class="card-text text-muted">@(template.Description.Length > 100 ? template.Description.Substring(0, 100) + "..." : template.Description)</p>
                        </div>
                        <div class="card-footer bg-white border-0 d-flex justify-content-between">
                            <a asp-action="Preview" asp-route-id="@template.TemplateId" class="btn btn-outline-primary" target="_blank">
                                <i class="fas fa-eye me-1"></i> Xem trước
                            </a>
                            <a asp-action="Create" asp-route-templateId="@template.TemplateId" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> Tạo CV
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> Hiện tại chưa có mẫu CV nào. Vui lòng quay lại sau.
                </div>
            </div>
        }
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 rounded-3 bg-light">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-3"><i class="fas fa-lightbulb text-warning me-2"></i> Tại sao nên sử dụng mẫu CV Premium?</h4>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="fas fa-check-circle text-success fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Thiết kế chuyên nghiệp</h5>
                                    <p class="text-muted">Các mẫu CV được thiết kế bởi chuyên gia với giao diện hiện đại và chuyên nghiệp</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="fas fa-star text-warning fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Nổi bật hơn</h5>
                                    <p class="text-muted">Giúp hồ sơ của bạn nổi bật hơn trong mắt nhà tuyển dụng</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="fas fa-bolt text-primary fa-2x"></i>
                                </div>
                                <div>
                                    <h5 class="fw-bold">Dễ dàng tùy chỉnh</h5>
                                    <p class="text-muted">Tùy chỉnh nội dung và định dạng một cách dễ dàng, không cần kiến thức thiết kế</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-action="MyCV" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-file-alt me-2"></i> Xem CV của tôi
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}
