@model List<TVOnline.ViewModels.Post.PostListViewModel>

@{
    ViewData["Title"] = "Trang chủ";
}

<div class="container">
    <h1 class="text-center mb-4">Việc làm mới nhất</h1>

    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@post.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@post.CompanyName</h6>
                        
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-geo-alt me-2"></i>
                                <span>@post.Location</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-cash me-2"></i>
                                <span>@post.Salary.ToString("N0") VNĐ</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-briefcase me-2"></i>
                                <span>@post.JobType</span>
                            </div>
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-person-workspace me-2"></i>
                                <span>@post.Experience</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar me-2"></i>
                                <span>Hạn nộp: @post.Deadline.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>

                        <a href="#" class="btn btn-primary">
                            <i class="bi bi-eye"></i> Xem chi tiết
                        </a>
                    </div>
                    <div class="card-footer text-muted">
                        <small>Đăng ngày: @post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Format all salary numbers
        document.addEventListener('DOMContentLoaded', function() {
            const salaryElements = document.querySelectorAll('.salary');
            salaryElements.forEach(function(element) {
                const value = parseInt(element.textContent);
                element.textContent = value.toLocaleString('vi-VN') + ' VNĐ';
            });
        });
    </script>
}
