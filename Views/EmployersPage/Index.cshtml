@model TVOnline.ViewModels.Employer.CompaniesListViewModel

@{
    ViewData["Title"] = "Danh Sách Công Ty";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<section class="employers-banner py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-5 fade-in-left">
                <div class="banner-content pe-lg-4">
                    <span class="badge bg-primary-light text-primary mb-3">Khám Phá</span>
                    <h1 class="display-5 fw-bold mb-3">Khám Phá Công Ty Hàng Đầu</h1>
                    <p class="text-muted fs-5 mb-4">Tìm hiểu về những công ty tốt nhất và cơ hội việc làm tại đây</p>
                    <div class="d-flex align-items-center">
                        <div class="banner-stats d-flex align-items-center me-4">
                            <div class="banner-stat-icon rounded-circle bg-primary text-white me-2 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; box-shadow: 0 3px 10px rgba(13, 110, 253, 0.2);">
                                <i class="bi bi-building fs-5"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold">@Model.Employers.Count()</h5>
                                <p class="mb-0 small text-muted">Công ty</p>
                            </div>
                        </div>
                        <div class="banner-stats d-flex align-items-center">
                            <div class="banner-stat-icon rounded-circle bg-success text-white me-2 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; box-shadow: 0 3px 10px rgba(25, 135, 84, 0.2);">
                                <i class="bi bi-briefcase fs-5"></i>
                            </div>
                            <div>
                                <h5 class="mb-0 fw-bold">100+</h5>
                                <p class="mb-0 small text-muted">Việc làm</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="search-filters p-4 rounded-4 bg-white border shadow fade-in-right">
                    <h5 class="fw-bold mb-3"><i class="bi bi-search text-primary me-2"></i>Tìm Kiếm Công Ty</h5>
                    <form class="row g-3" method="get" action="@Url.Action("Index", "EmployersPage")">
                        <div class="col-lg-6 col-md-6">
                            <label class="form-label small fw-medium">Tên công ty</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-building text-primary"></i>
                                </span>
                                <input type="text" name="companyName" class="form-control bg-light border-start-0" placeholder="Nhập tên công ty..." value="@Model.SearchCompanyName">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <label class="form-label small fw-medium">Lĩnh vực</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-briefcase text-primary"></i>
                                </span>
                                <select name="field" class="form-select bg-light border-start-0">
                                    <option value="">Tất cả lĩnh vực</option>
                                    @foreach (var field in Model.Fields)
                                    {
                                        if (Model.SearchField == field.Name)
                                        {
                                            <option value="@field.Name" selected>@field.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@field.Name">@field.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <label class="form-label small fw-medium">Địa điểm</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-geo-alt text-primary"></i>
                                </span>
                                <select name="location" class="form-select bg-light border-start-0">
                                    <option value="">Tất cả địa điểm</option>
                                    @foreach (var city in Model.Cities)
                                    {
                                        if (Model.SearchLocation == city.Name)
                                        {
                                            <option value="@city.Name" selected>@city.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@city.Name">@city.Name</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <label class="form-label small fw-medium">Hành động</label>
                            <button type="submit" class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
                                <i class="bi bi-search me-2"></i> Tìm kiếm công ty
                            </button>
                        </div>
                        <div class="col-12 mt-2">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="small text-muted"><i class="bi bi-info-circle me-1"></i> Tìm kiếm nhanh chóng và chính xác</span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="employers-list py-5">
    <div class="container">
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0">Danh Sách Công Ty</h2>
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-sort-down me-1"></i> Sắp xếp theo
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Tên (A-Z)</a></li>
                        <li><a class="dropdown-item" href="#">Tên (Z-A)</a></li>
                        <li><a class="dropdown-item" href="#">Số lượng việc làm (Cao-Thấp)</a></li>
                        <li><a class="dropdown-item" href="#">Mới nhất</a></li>
                    </ul>
                </div>
            </div>
            <p class="text-muted">Hiển thị <span class="fw-medium">@Model.Employers.Count()</span> công ty</p>
        </div>

        <div class="row g-4 employers-grid">
            @foreach (var employer in Model.Employers)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="company-card h-100 rounded-4 shadow-sm overflow-hidden fade-in-up position-relative">
                        <div class="company-card-header p-4">
                            <div class="d-flex align-items-center">
                                <div class="company-logo-wrapper me-3">
                                    <img src="@employer.LogoUrl" class="company-logo-md rounded-circle p-1 shadow-sm" alt="@employer.CompanyName">
                                </div>
                                <div>
                                    <h5 class="mb-1">
                                        <a asp-controller="EmployersPage" asp-action="ViewEmployerDetail" asp-route-id="@employer.EmployerId" 
                                           class="company-name text-decoration-none">
                                            @employer.CompanyName
                                        </a>
                                    </h5>
                                    <p class="mb-0 text-muted small">@employer.Field</p>
                                </div>
                            </div>
                        </div>
                        <div class="company-card-body p-4">
                            <p class="company-description text-muted mb-3">
                                @(employer.Description?.Length > 120 ? employer.Description.Substring(0, 120) + "..." : employer.Description)
                            </p>
                            <div class="company-stats d-flex flex-wrap">
                                <span class="badge bg-secondary-light text-secondary me-2 mb-2">
                                    <i class="bi bi-geo-alt me-1"></i>@employer.CityName
                                </span>
                                <span class="badge bg-secondary-light text-secondary me-2 mb-2">
                                    <i class="bi bi-building me-1"></i>@employer.Field
                                </span>
                                <span class="badge bg-primary-light text-primary mb-2">
                                    <i class="bi bi-briefcase me-1"></i>5+ Việc làm
                                </span>
                            </div>
                        </div>
                        <a asp-controller="EmployersPage" asp-action="ViewEmployerDetail" asp-route-id="@employer.EmployerId" 
                           class="card-link-overlay"></a>
                    </div>
                </div>
            }
        </div>

        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                    <a class="page-link rounded-pill" href="?page=@(currentPage - 1)">
                        <i class="bi bi-chevron-left"></i> Trước
                    </a>
                </li>

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link rounded-pill" href="?page=@i">@i</a>
                    </li>
                }

                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                    <a class="page-link rounded-pill" href="?page=@(currentPage + 1)">
                        Sau <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log("EmployersPage/Index scripts loaded");
            
            // Chỉ xử lý hover effect của card tại đây, không thêm các event listener khác
            const companyCards = document.querySelectorAll('.company-card');
            companyCards.forEach(card => {
                // Dùng event để cung cấp feedback trực quan
                card.addEventListener('mouseenter', function() {
                    this.classList.add('shadow');
                    this.classList.remove('shadow-sm');
                });
                
                card.addEventListener('mouseleave', function() {
                    this.classList.remove('shadow');
                    this.classList.add('shadow-sm');
                });
                
                // Vô hiệu hóa mọi event mặc định cho card-link-overlay để đảm bảo hoạt động đúng
                const overlay = card.querySelector('.card-link-overlay');
                if (overlay) {
                    overlay.addEventListener('mouseenter', function(e) {
                        // Thay đổi con trỏ chuột để biểu thị vùng có thể click
                        this.style.cursor = 'pointer';
                    });
                }
            });
            
            // Staggered animation cho company cards
            const companyItems = document.querySelectorAll('.employers-grid > div');
            companyItems.forEach((item, index) => {
                item.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
}
