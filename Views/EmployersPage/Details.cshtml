@model TVOnline.Models.Employers

<section class="company-detail py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card p-4 mb-4">
                    <div class="d-flex align-items-center mb-4">
                        <img src="@Model.LogoURL" class="company-logo-xl me-4" alt="Company Logo">
                        <div>
                            <h2 class="mb-2">@Model.CompanyName</h2>
                            <div class="company-meta">
                                <span class="me-3"><i class="bi bi-geo-alt me-1"></i>@Model.City.CityName</span>
                                @* <span><i class="bi bi-globe me-1"></i>www.techsolutions.com</span> *@
                            </div>
                        </div>
                    </div>
                    <div class="company-overview mb-4">
                        <h4>Giới thiệu công ty</h4>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card p-4 mb-4">
                    <h4 class="mb-4">Thông tin liên hệ</h4>
                    <ul class="list-unstyled">
                        <li class="mb-3">
                            <i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                            @Model.City.CityName
                        </li>
                    </ul>
                    <hr>
                </div>
            </div>
        </div>
    </div>
</section>