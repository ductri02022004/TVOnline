@{
    ViewData["Title"] = "Xác nhận Email";
    Layout = "~/Views/Shared/Account/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box text-center">
        @if (ViewBag.IsSuccess == true)
        {
            <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
            <h2 class="mt-3">Xác nhận Email thành công!</h2>
            <p class="mt-3">@ViewBag.Message</p>
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Đăng nhập ngay</a>
            </div>
        }
        else
        {
            <i class="bi bi-x-circle text-danger" style="font-size: 4rem;"></i>
            <h2 class="mt-3">Xác nhận Email thất bại</h2>
            <p class="mt-3">@ViewBag.Message</p>
            <div class="mt-4">
                <p class="text-muted">Vui lòng thử lại hoặc yêu cầu gửi lại email xác nhận.</p>
                <form asp-action="ResendConfirmationEmail" method="post" class="mt-2">
                    <div class="form-group mb-3">
                        <input type="email" name="email" class="form-control" placeholder="Nhập địa chỉ email của bạn" required />
                    </div>
                    <button type="submit" class="btn btn-outline-primary">Gửi lại email xác nhận</button>
                </form>
            </div>
        }

        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Quay lại trang đăng nhập</a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
}
