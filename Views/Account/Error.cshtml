@{
    ViewData["Title"] = "Lỗi";
    Layout = "~/Views/Shared/Account/_AccountLayout.cshtml";
}

<div class="account-container">
    <div class="account-box text-center">
        <h2 class="text-danger mb-4">@(ViewBag.ErrorTitle ?? "Lỗi")</h2>
        
        <div class="alert alert-danger">
            @(ViewBag.ErrorMessage ?? "Đã xảy ra lỗi trong quá trình xử lý yêu cầu của bạn.")
        </div>
        
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Trở về trang chủ</a>
        </div>
    </div>
</div>
