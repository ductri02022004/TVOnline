@using TVOnline.ViewModels.Account;
@model LoginViewModel;

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/Account/_AccountLayout.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/account.css" />

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2>Đăng nhập</h2>
            <p>Chào mừng bạn quay trở lại!</p>
        </div>

        <form asp-action="Login" method="post" class="login-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i>
                    </span>
                    <input asp-for="UserName" class="form-control" placeholder="Email hoặc tên đăng nhập" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" id="password" placeholder="Mật khẩu" />
                    <button type="button" class="btn btn-outline-secondary password-toggle" onclick="togglePassword('password', 'toggleIcon')">
                        <i id="toggleIcon" class="bi bi-eye-slash"></i>
                    </button>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-options">
                <div class="remember-me">
                    <label class="form-check-label">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <span>@Html.DisplayNameFor(a => a.RememberMe)</span>
                    </label>
                </div>
                <a asp-controller="Account" asp-action="CheckEmail" class="forgot-password">
                    Quên mật khẩu?
                </a>
            </div>

            <button type="submit" class="btn btn-primary login-btn">
                <i class="bi bi-box-arrow-in-right"></i>
                Đăng nhập
            </button>
        </form>

        <div class="divider">
            <span>hoặc</span>
        </div>

        <form asp-action="ExternalLogin" asp-controller="Account" method="post" class="social-login">
            <button type="submit" class="btn btn-google" name="provider" value="Google">
                <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/c/c1/Google_%22G%22_logo.svg/24px-Google_%22G%22_logo.svg.png" alt="Google" />
                Đăng nhập với Google
            </button>
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
        </form>

        <div class="register-link">
            Chưa có tài khoản? 
            <a asp-controller="Account" asp-action="Register">Đăng ký ngay</a>
        </div>

        <div class="back-link">
            <a asp-controller="Home" asp-action="Index">
                <i class="bi bi-arrow-left"></i>
                Trở về trang chủ
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/account.js"></script>
}
