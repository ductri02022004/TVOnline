@model TVOnline.ViewModels.Post.PostDetailViewModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager

@{
    ViewBag.Title = "Chi tiết công việc";
}

<section class="job-detail-header py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a asp-controller="ApplyJob" asp-action="Index">Việc làm</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.Post.Title</li>
                    </ol>
                </nav>
                
                <div class="card border-0 rounded-4 shadow-sm overflow-hidden fade-in-up">
                    <div class="card-body p-4">
                        <div class="row align-items-center">
                            <div class="col-lg-2 col-md-3 text-center text-md-start mb-4 mb-md-0">
                                <img src="@Model.Post.CompanyLogoUrl" class="company-logo-xl rounded bg-white p-2 shadow-sm" alt="@Model.Post.CompanyName" style="max-width: 100px; max-height: 100px;">
                            </div>
                            <div class="col-lg-7 col-md-9">
                                <span class="badge bg-primary-light text-primary mb-2">@Model.Post.Position</span>
                                <h1 class="job-title h2 mb-2">@Model.Post.Title</h1>
                                <p class="company-name fs-5 mb-3">
                                    <a href="#" class="text-decoration-none">@Model.Post.CompanyName</a>
                                </p>
                                <div class="d-flex flex-wrap job-meta-tags">
                                    <div class="job-meta me-4 mb-2">
                                        <i class="bi bi-geo-alt-fill text-primary me-1"></i>
                                        <span>@Model.Post.CityName</span>
                                    </div>
                                    <div class="job-meta me-4 mb-2">
                                        <i class="bi bi-cash-stack text-primary me-1"></i>
                                        <span>@($"{Model.Post.Salary:N0} VND")</span>
                                    </div>
                                    <div class="job-meta me-4 mb-2">
                                        <i class="bi bi-briefcase-fill text-primary me-1"></i>
                                        <span>@Model.Post.Experience</span>
                                    </div>
                                    <div class="job-meta mb-2">
                                        <i class="bi bi-person-workspace text-primary me-1"></i>
                                        <span>@Model.Post.Position</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 mt-4 mt-lg-0 text-center text-lg-end">
                                <div class="d-grid gap-2">
                                    @if (SignInManager.IsSignedIn(User))
                                    {
                                        <a href="#apply-form" class="btn btn-primary">
                                            <i class="bi bi-send-fill me-2"></i>Ứng tuyển ngay
                                        </a>
                                    }
                                    else
                                    {
                                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập để ứng tuyển
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="job-detail-content py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 rounded-4 shadow-sm p-4 mb-4 fade-in-up">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-file-text-fill text-primary me-2"></i>Mô tả công việc
                    </h4>
                    <div class="job-description">
                        <p>@Model.Post.Description</p>
                    </div>
                </div>
                
                <div class="card border-0 rounded-4 shadow-sm p-4 mb-4 fade-in-up">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-list-check text-primary me-2"></i>Yêu cầu ứng viên
                    </h4>
                    <ul class="job-requirements list-unstyled">
                        @foreach (var req in Model.Post.Requirements.Split('\n'))
                        {
                            <li class="d-flex mb-3">
                                <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                <span>@req</span>
                            </li>
                        }
                    </ul>
                </div>
                
                <div class="card border-0 rounded-4 shadow-sm p-4 mb-4 fade-in-up">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-award-fill text-primary me-2"></i>Quyền lợi
                    </h4>
                    <ul class="benefits list-unstyled">
                        @foreach (var benefit in Model.Post.Benefits.Split('\n'))
                        {
                            <li class="d-flex mb-3">
                                <i class="bi bi-gift-fill text-primary me-2 mt-1"></i>
                                <span>@benefit</span>
                            </li>
                        }
                    </ul>
                </div>
                
                <div class="card border-0 rounded-4 shadow-sm p-4 fade-in-up" id="apply-form">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-send-fill text-primary me-2"></i>Ứng tuyển ngay
                    </h4>
                    
                    @if (!SignInManager.IsSignedIn(User))
                    {
                        <div class="alert alert-warning" role="alert">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                                <div>
                                    <h5 class="alert-heading mb-1">Bạn cần đăng nhập để ứng tuyển</h5>
                                    <p class="mb-0">Vui lòng <a asp-controller="Account" asp-action="Login" class="alert-link">đăng nhập</a> hoặc <a asp-controller="Account" asp-action="Register" class="alert-link">đăng ký</a> để ứng tuyển vị trí này.</p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <form asp-action="Apply" asp-controller="ApplyJob" asp-route-postId="@Model.Post.PostId" method="post" enctype="multipart/form-data">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="fullName" name="FullName" placeholder="Họ và Tên" value="@Model.CurrentUser?.FullName" required>
                                        <label for="fullName">Họ và Tên</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" id="email" name="Email" placeholder="Email" value="@Model.CurrentUser?.Email" required>
                                        <label for="email">Email</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="tel" class="form-control" id="phoneNumber" name="PhoneNumber" placeholder="Số Điện Thoại" value="@Model.CurrentUser?.PhoneNumber" required>
                                        <label for="phoneNumber">Số Điện Thoại</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label for="cvFile" class="form-label">Tải lên CV <span class="text-danger">*</span></label>
                                        <input type="file" class="form-control" id="cvFile" name="cvFile" required accept=".pdf,.doc,.docx">
                                        <div class="form-text">Định dạng hỗ trợ: PDF, DOC, DOCX (tối đa 5MB)</div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating mb-3">
                                        <textarea class="form-control" id="coverLetter" name="CoverLetter" placeholder="Thư giới thiệu" style="height: 150px"></textarea>
                                        <label for="coverLetter">Thư giới thiệu</label>
                                        <div class="form-text">Giới thiệu bản thân và lý do bạn phù hợp với vị trí này</div>
                                    </div>
                                </div>
                                <input type="hidden" name="postId" value="@Model.Post.PostId" />
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary py-3">
                                            <i class="bi bi-send-fill me-2"></i>Gửi hồ sơ ứng tuyển
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                        
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success mt-4" role="alert">
                                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger mt-4" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                            </div>
                        }
                    }
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card border-0 rounded-4 shadow-sm p-4 mb-4 fade-in-right sticky-lg-top" style="top: 1rem; z-index: 1">
                    <h4 class="card-title mb-4">
                        <i class="bi bi-info-circle-fill text-primary me-2"></i>Thông tin công việc
                    </h4>
                    <ul class="list-unstyled job-overview">
                        <li class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="icon-box bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-building text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Công ty</h6>
                                <p class="mb-0">@Model.Post.CompanyName</p>
                            </div>
                        </li>
                        <li class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="icon-box bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-geo-alt text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Địa điểm</h6>
                                <p class="mb-0">@Model.Post.CityName</p>
                            </div>
                        </li>
                        <li class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="icon-box bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-cash-stack text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Mức lương</h6>
                                <p class="mb-0">@($"{Model.Post.Salary:N0} VND")</p>
                            </div>
                        </li>
                        <li class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="icon-box bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-briefcase text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Kinh nghiệm</h6>
                                <p class="mb-0">@Model.Post.Experience</p>
                            </div>
                        </li>
                        <li class="d-flex align-items-center mb-3 pb-3 border-bottom">
                            <div class="icon-box bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-person-workspace text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Vị trí</h6>
                                <p class="mb-0">@Model.Post.Position</p>
                            </div>
                        </li>
                        <li class="d-flex align-items-center">
                            <div class="icon-box bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                <i class="bi bi-calendar-check text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-1">Ngày đăng</h6>
                                <p class="mb-0">@Model.Post.CreatedAt.ToString("dd/MM/yyyy")</p>
                            </div>
                        </li>
                    </ul>
                    
                    <div class="mt-4 pt-3 border-top">
                        <h5 class="mb-3">Chia sẻ công việc này</h5>
                        <div class="d-flex">
                            <a href="#" class="social-link me-2">
                                <div class="icon-box bg-facebook text-white rounded p-2">
                                    <i class="bi bi-facebook"></i>
                                </div>
                            </a>
                            <a href="#" class="social-link me-2">
                                <div class="icon-box bg-linkedin text-white rounded p-2">
                                    <i class="bi bi-linkedin"></i>
                                </div>
                            </a>
                            <a href="#" class="social-link me-2">
                                <div class="icon-box bg-twitter text-white rounded p-2">
                                    <i class="bi bi-twitter"></i>
                                </div>
                            </a>
                            <a href="#" class="social-link">
                                <div class="icon-box bg-email text-white rounded p-2">
                                    <i class="bi bi-envelope-fill"></i>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Smooth scroll to apply form when clicking apply button
            const applyButtons = document.querySelectorAll('a[href="#apply-form"]');
            applyButtons.forEach(button => {
                button.addEventListener('click', function(e) {
                    e.preventDefault();
                    document.querySelector('#apply-form').scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });
        });
    </script>
    
    <style>
        .bg-facebook { background-color: #3b5998; }
        .bg-linkedin { background-color: #0077b5; }
        .bg-twitter { background-color: #1da1f2; }
        .bg-email { background-color: #dd4b39; }
    </style>
}