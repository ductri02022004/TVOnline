@model TVOnline.ViewModels.Employer.EmployerDashboardViewModel

@{
    ViewData["Title"] = "Trang chủ nhà tuyển dụng";
    Layout = "_EmployerDashboardLayout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h6>Thông tin tổng quan</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-primary shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                                Tin tuyển dụng</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalPosts</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="bi bi-file-earmark-text fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-success shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                                Hồ sơ ứng tuyển</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalApplications</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="bi bi-person-vcard fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-info shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                                Đã chọn</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ApplicationStatistics.ShortlistedCount</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="bi bi-check-circle fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-3 col-md-6 mb-4">
                            <div class="card border-left-warning shadow h-100 py-2">
                                <div class="card-body">
                                    <div class="row no-gutters align-items-center">
                                        <div class="col mr-2">
                                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                                Đang xem xét</div>
                                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ApplicationStatistics.ReviewingCount</div>
                                        </div>
                                        <div class="col-auto">
                                            <i class="bi bi-hourglass-split fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h6>Thông tin công ty</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            @if (!string.IsNullOrEmpty(Model.CompanyInfo?.LogoURL))
                            {
                                <img src="@Model.CompanyInfo.LogoURL" alt="Company Logo" class="img-fluid rounded" style="max-height: 150px;">
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 150px; width: 100%;">
                                    <i class="bi bi-building text-muted" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-9">
                            <h4>@Model.CompanyInfo?.CompanyName</h4>
                            <p class="text-muted mb-2"><i class="bi bi-geo-alt me-2"></i>@Model.CompanyInfo?.CityName</p>
                            <p class="text-muted mb-2"><i class="bi bi-briefcase me-2"></i>@Model.CompanyInfo?.Field</p>
                            <p class="text-muted mb-2"><i class="bi bi-envelope me-2"></i>@Model.CompanyInfo?.Email</p>
                            <div class="mt-3">
                                <a href="@Url.Action("EditProfile", "EmployerDashboard")" class="btn btn-outline-primary">
                                    <i class="bi bi-pencil-square me-1"></i>Cập nhật thông tin
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8 col-lg-7">
            <div class="card mb-4">
                <div class="card-header pb-0 d-flex justify-content-between align-items-center">
                    <h6>Hồ sơ ứng tuyển gần đây</h6>
                    <a href="@Url.Action("ManageApplications")" class="btn btn-sm btn-primary">Xem tất cả</a>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ứng viên</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Vị trí</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Trạng thái</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Ngày nộp</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentApplications != null && Model.RecentApplications.Any())
                                {
                                    @foreach (var application in Model.RecentApplications)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div>
                                                        <img src="https://ui-avatars.com/api/?name=@application.UserName" class="avatar avatar-sm me-3" alt="user1">
                                                    </div>
                                                    <div class="d-flex flex-column justify-content-center">
                                                        <h6 class="mb-0 text-sm">@application.UserName</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0">@application.PostTitle</p>
                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                @{
                                                    string badgeClass = application.Status switch
                                                    {
                                                        "Applied" => "badge badge-sm bg-gradient-info",
                                                        "Reviewing" => "badge badge-sm bg-gradient-warning",
                                                        "Shortlisted" => "badge badge-sm bg-gradient-success",
                                                        "Rejected" => "badge badge-sm bg-gradient-danger",
                                                        "Interviewed" => "badge badge-sm bg-gradient-primary",
                                                        _ => "badge badge-sm bg-gradient-secondary"
                                                    };
                                                }
                                                <span class="@badgeClass">@application.Status</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@application.AppliedDate.ToString("dd/MM/yyyy")</span>
                                            </td>
                                            <td class="align-middle">
                                                <a href="@Url.Action("ApplicationDetails", new { cvId = application.CvId })" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Xem chi tiết">
                                                    Xem chi tiết
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-4">
                                            <p class="text-secondary mb-0">Chưa có hồ sơ ứng tuyển nào</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Thống kê hồ sơ ứng tuyển</h6>
                </div>
                <div class="card-body">
                    <div class="chart-pie pt-4">
                        <canvas id="applicationStatusChart"></canvas>
                    </div>
                    <div class="mt-4 text-center small">
                        <span class="me-2">
                            <i class="bi bi-circle-fill text-primary"></i> Đã nộp
                        </span>
                        <span class="me-2">
                            <i class="bi bi-circle-fill text-warning"></i> Đang xem xét
                        </span>
                        <span class="me-2">
                            <i class="bi bi-circle-fill text-success"></i> Đã chọn
                        </span>
                        <span class="me-2">
                            <i class="bi bi-circle-fill text-danger"></i> Từ chối
                        </span>
                        <span class="me-2">
                            <i class="bi bi-circle-fill text-info"></i> Đã phỏng vấn
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Biểu đồ thống kê trạng thái CV
        var ctx = document.getElementById("applicationStatusChart");
        var myPieChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ["Đã nộp", "Đang xem xét", "Đã chọn", "Từ chối", "Đã phỏng vấn"],
                datasets: [{
                    data: [
                        @Model.ApplicationStatistics.AppliedCount,
                        @Model.ApplicationStatistics.ReviewingCount,
                        @Model.ApplicationStatistics.ShortlistedCount,
                        @Model.ApplicationStatistics.RejectedCount,
                        @Model.ApplicationStatistics.InterviewedCount
                    ],
                    backgroundColor: ['#4e73df', '#f6c23e', '#1cc88a', '#e74a3b', '#36b9cc'],
                    hoverBackgroundColor: ['#2e59d9', '#e0aa0f', '#17a673', '#c93a2c', '#2c9faf'],
                    hoverBorderColor: "rgba(234, 236, 244, 1)",
                }],
            },
            options: {
                maintainAspectRatio: false,
                tooltips: {
                    backgroundColor: "rgb(255,255,255)",
                    bodyFontColor: "#858796",
                    borderColor: '#dddfeb',
                    borderWidth: 1,
                    xPadding: 15,
                    yPadding: 15,
                    displayColors: false,
                    caretPadding: 10,
                },
                legend: {
                    display: false
                },
                cutoutPercentage: 80,
            },
        });
    </script>
}
