@model TVOnline.Models.Post
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Users> SignInManager


@{
    ViewBag.Title = "Chi tiết công việc";
}

<section class="job-detail py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card p-4 mb-4">
                    <div class="d-flex align-items-center mb-4">
                        <img src="https://images.unsplash.com/photo-1549923746-c502d488b3ea" class="company-logo-xl me-4" alt="Company Logo">
                        <div>
                            <h2 class="mb-2">Senior Frontend Developer</h2>
                            <p class="company-name mb-2">Tech Solutions Inc.</p>
                            <div class="job-meta">
                                <span class="me-3"><i class="bi bi-geo-alt me-1"></i>Hà Nội</span>
                                <span class="me-3"><i class="bi bi-cash me-1"></i>20-30 triệu</span>
                                <span><i class="bi bi-briefcase me-1"></i>3-5 năm</span>
                            </div>
                        </div>
                    </div>
                    <div class="job-description mb-4">
                        <h4>Mô tả công việc</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-check2-circle me-2 text-primary"></i>Phát triển và duy trì các ứng dụng web frontend sử dụng React, Angular</li>
                            <li class="mb-2"><i class="bi bi-check2-circle me-2 text-primary"></i>Tối ưu hóa hiệu suất và trải nghiệm người dùng</li>
                            <li class="mb-2"><i class="bi bi-check2-circle me-2 text-primary"></i>Làm việc với team backend để tích hợp API</li>
                            <li class="mb-2"><i class="bi bi-check2-circle me-2 text-primary"></i>Code review và mentoring cho các thành viên junior</li>
                        </ul>
                    </div>
                    <div class="job-requirements mb-4">
                        <h4>Yêu cầu ứng viên</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-arrow-right me-2 text-primary"></i>3-5 năm kinh nghiệm với Frontend Development</li>
                            <li class="mb-2"><i class="bi bi-arrow-right me-2 text-primary"></i>Thành thạo JavaScript, HTML5, CSS3</li>
                            <li class="mb-2"><i class="bi bi-arrow-right me-2 text-primary"></i>Kinh nghiệm với React hoặc Angular</li>
                            <li class="mb-2"><i class="bi bi-arrow-right me-2 text-primary"></i>Kỹ năng tối ưu hóa hiệu suất web</li>
                        </ul>
                    </div>
                    <div class="benefits mb-4">
                        <h4>Quyền lợi</h4>
                        <ul class="list-unstyled">
                            <li class="mb-2"><i class="bi bi-gift me-2 text-primary"></i>Lương thưởng cạnh tranh</li>
                            <li class="mb-2"><i class="bi bi-gift me-2 text-primary"></i>Bảo hiểm sức khỏe cao cấp</li>
                            <li class="mb-2"><i class="bi bi-gift me-2 text-primary"></i>13 tháng lương + thưởng dự án</li>
                            <li class="mb-2"><i class="bi bi-gift me-2 text-primary"></i>Làm việc từ xa 2 ngày/tuần</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 align-self-baseline">
                @if (SignInManager.IsSignedIn(User))
                {
                    <div class="card p-4 mb-4">
                        <h4 class="mb-4">Ứng tuyển ngay</h4>
                        <form asp-action="Apply" asp-controller="Post" asp-route-postId="@Model.PostId" method="post" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label class="form-label">Họ và tên</label>
                                <input type="text" class="form-control" name="FullName" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" name="Email" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Số điện thoại</label>
                                <input type="tel" class="form-control" name="PhoneNumber" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Tải lên CV</label>
                                <input type="file" class="form-control" name="cvFile" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Thư giới thiệu</label>
                                <textarea class="form-control" rows="4" name="CoverLetter"></textarea>
                            </div>
                            <input type="hidden" name="postId" value="@Model.PostId" />
                            <button type="submit" class="btn btn-primary w-100">Gửi hồ sơ ứng tuyển</button>
                        </form>
                    </div>
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        Bạn cần <a asp-controller="Account" asp-action="Login" class="alert-link">đăng nhập</a> để ứng tuyển.
                    </div>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100">Đăng nhập để ứng tuyển</a>
                }
            </div>
        </div>
    </div>
</section>
