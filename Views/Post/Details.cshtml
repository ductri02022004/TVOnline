@model TVOnline.Models.Post

@{
    ViewData["Title"] = "Chi tiết tin tuyển dụng";
    Layout = "_EmployerDashboardLayout";
}

<div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Chi tiết tin tuyển dụng</h4>
        <div>
            <a asp-area="" asp-controller="Employer/Post" asp-action="Edit" asp-route-id="@Model.PostId" class="btn btn-light">
                <i class="bi bi-pencil"></i> Chỉnh sửa
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-8">
                <h2 class="text-primary">@Model.Title</h2>
                <p class="text-muted">
                    <i class="bi bi-geo-alt"></i> @Model.City.CityName |
                    <i class="bi bi-briefcase"></i> @Model.JobType |
                    <i class="bi bi-award"></i> @Model.Experience
                </p>
            </div>
            <div class="col-md-4 text-end">
                <div class="badge bg-@(Model.IsActive ? "success" : "danger") mb-2">
                    @(Model.IsActive ? "Đang tuyển" : "Đã đóng")
                </div>
                <p class="mb-0">Ngày đăng: @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                @if (Model.UpdatedAt.HasValue)
                {
                    <p>Cập nhật: @Model.UpdatedAt.Value.ToString("dd/MM/yyyy")</p>
                }
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Thông tin chung</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Vị trí:</strong> @Model.Position</p>
                                <p><strong>Loại công việc:</strong> @Model.JobType</p>
                                <p><strong>Kinh nghiệm:</strong> @Model.Experience</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Mức lương:</strong> @Model.Salary.ToString("N0") VNĐ</p>
                                <p><strong>Địa điểm:</strong> @Model.City.CityName</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-file-text"></i> Mô tả công việc</h5>
                    </div>
                    <div class="card-body">
                        <div class="job-description">
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-list-check"></i> Yêu cầu ứng viên</h5>
                    </div>
                    <div class="card-body">
                        <div class="job-requirements">
                            @Html.Raw(Model.Requirements)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gift"></i> Quyền lợi</h5>
                    </div>
                    <div class="card-body">
                        <div class="job-benefits">
                            @Html.Raw(Model.Benefits)
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <a asp-controller="EmployerDashboard" asp-action="ManagePosts" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <a asp-controller="EmployerDashboard" asp-action="ViewApplications" asp-route-postId="@Model.PostId" class="btn btn-success">
                    <i class="bi bi-file-earmark-person"></i> Xem hồ sơ ứng tuyển
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Có thể thêm JavaScript nếu cần
        });
    </script>
}
