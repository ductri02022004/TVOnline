<div class="container mt-5">
    <h2 class="text-center mb-4">Chi tiết bài đăng</h2>
    @foreach (var post in Model)
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    @* <img src="@Model.ImageUrl" class="card-img-top" alt="Ảnh bài đăng"> *@
                    <div class="card-body">
                        <h5 class="card-title">Bài đăng @post.PostId</h5>
                        <p class="card-text">@post.Description</p>
                        <p class="card-text"><small class="text-muted">Nhà tuyển dụng: @post.EmployerId</small></p>
                        <p class="card-text"><small class="text-muted">Ngày đăng: @post.Date.ToString("dd/MM/yyyy")</small></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <form asp-action="Apply" asp-controller="Post" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="cvFile">Tải lên CV của bạn</label>
                        <input type="file" class="form-control" id="cvFile" name="cvFile" required>
                    </div>
                    <input type="hidden" name="postId" value="@post.PostId" />
                    <button type="submit" class="btn btn-primary mt-3">Ứng tuyển ngay</button>
                </form>
            </div>
        </div>
    }
</div>