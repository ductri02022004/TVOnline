@inject SignInManager<Users> signInManager;

@{
    ViewData["Title"] = "Chi tiết bài đăng";
}

<section class="job-filters py-4 bg-light">
    <div class="container">
        <div class="row g-3">
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Ngành Nghề</option>
                    <option>Công Nghệ Thông Tin</option>
                    <option>Tài Chính - Ngân Hàng</option>
                    <option>Marketing</option>
                    <option>Y Tế</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Kinh Nghiệm</option>
                    <option>Chưa có kinh nghiệm</option>
                    <option>1-2 năm</option>
                    <option>3-5 năm</option>
                    <option>Trên 5 năm</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select">
                    <option selected>Mức Lương</option>
                    <option>Dưới 10 triệu</option>
                    <option>10-20 triệu</option>
                    <option>20-30 triệu</option>
                    <option>Trên 30 triệu</option>
                </select>
            </div>
            <div class="col-md-3">
                <button class="btn btn-primary w-100">Lọc Kết Quả</button>
            </div>
        </div>
    </div>
</section>

<section class="job-listings py-5">
    <div class="container">
        <div class="row g-4">
            @foreach (var post in Model)
            {
                <div class="col-12">
                    <div class="job-list-card p-4 bg-white rounded shadow-sm">
                        <div class="row align-items-center">
                            <div class="col-md-2 col-sm-3 mb-3 mb-md-0">
                                <img src="https://images.unsplash.com/photo-1549923746-c502d488b3ea" class="company-logo-lg" alt="Company">
                            </div>
                            <div class="col-md-7 col-sm-9 mb-3 mb-md-0">
                                <a asp-controller="Post" asp-action="Details" asp-route-postID="@post.PostId"><h4>Senior Frontend Developer</h4></a>
                                <p class="company-name mb-2">@post.EmployerId</p>
                                <div class="job-meta">
                                    <span class="me-3"><i class="bi bi-geo-alt me-1"></i>Hà Nội</span>
                                    <span class="me-3"><i class="bi bi-cash me-1"></i>20-30 triệu</span>
                                    <span><i class="bi bi-briefcase me-1"></i>3-5 năm</span>
                                </div>
                            </div>
                            <div class="col-md-3 text-md-end">
                                <button class="btn btn-primary">Ứng Tuyển Ngay</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-12">
                <div class="job-list-card p-4 bg-white rounded shadow-sm">
                    <div class="row align-items-center">
                        <div class="col-md-2 col-sm-3 mb-3 mb-md-0">
                            <img src="https://images.unsplash.com/photo-1560179707-f14e90ef3623" class="company-logo-lg" alt="Company">
                        </div>
                        <div class="col-md-7 col-sm-9 mb-3 mb-md-0">
                            <h4>Marketing Manager</h4>
                            <p class="company-name mb-2">Digital Brands Co.</p>
                            <div class="job-meta">
                                <span class="me-3"><i class="bi bi-geo-alt me-1"></i>TP. Hồ Chí Minh</span>
                                <span class="me-3"><i class="bi bi-cash me-1"></i>25-35 triệu</span>
                                <span><i class="bi bi-briefcase me-1"></i>5+ năm</span>
                            </div>
                        </div>
                        <div class="col-md-3 text-md-end">
                            <button class="btn btn-primary">Ứng Tuyển Ngay</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

