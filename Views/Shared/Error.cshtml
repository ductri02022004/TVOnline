@model ErrorViewModel
@{
    ViewData["Title"] = "Lỗi";
}

<section class="error-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow border-0 overflow-hidden rounded-4 fade-in-up">
                    <div class="card-header bg-danger bg-gradient py-3">
                        <h4 class="text-white text-center mb-0">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>Đã xảy ra lỗi
                        </h4>
                    </div>
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <div class="error-icon mb-3 d-inline-block">
                                <i class="bi bi-emoji-frown display-1 text-danger"></i>
                            </div>
                            <h2 class="mb-3">Rất tiếc, đã xảy ra lỗi</h2>
                            <p class="text-muted">Hệ thống không thể xử lý yêu cầu của bạn tại thời điểm này.</p>
                            
                            @if (Model.ShowRequestId)
                            {
                                <div class="alert alert-secondary mt-4">
                                    <strong>Mã yêu cầu:</strong> <code class="bg-light px-2 py-1 rounded">@Model.RequestId</code>
                                </div>
                                <p class="text-muted small">Vui lòng cung cấp mã yêu cầu này khi liên hệ với đội hỗ trợ.</p>
                            }
                        </div>
                        
                        <div class="error-actions">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-house-door-fill me-2"></i>Quay về trang chủ
                                    </a>
                                </div>
                                <div class="col-md-6">
                                    <a href="javascript:history.back()" class="btn btn-outline-secondary w-100 d-flex align-items-center justify-content-center">
                                        <i class="bi bi-arrow-left me-2"></i>Quay lại trang trước
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        @if (System.Diagnostics.Debugger.IsAttached || Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
                        {
                            <div class="development-mode-info mt-5 pt-4 border-top">
                                <h5 class="text-warning">
                                    <i class="bi bi-info-circle-fill me-2"></i>Chế độ phát triển
                                </h5>
                                <p>
                                    Chuyển sang chế độ <strong>Development</strong> sẽ hiển thị thêm thông tin chi tiết về lỗi đã xảy ra.
                                </p>
                                <div class="alert alert-warning">
                                    <strong>Lưu ý:</strong> Không nên bật chế độ <strong>Development</strong> cho các ứng dụng đã triển khai.
                                    Điều này có thể dẫn đến việc tiết lộ thông tin nhạy cảm cho người dùng cuối.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Add shake animation to the error icon
            const errorIcon = document.querySelector('.error-icon i');
            setTimeout(() => {
                errorIcon.classList.add('shake-animation');
            }, 500);
            
            // Add hover effects to buttons
            const buttons = document.querySelectorAll('.error-actions .btn');
            buttons.forEach(button => {
                button.addEventListener('mouseenter', function() {
                    this.classList.add('scale-animation');
                });
                button.addEventListener('mouseleave', function() {
                    this.classList.remove('scale-animation');
                });
            });
        });
    </script>
}
