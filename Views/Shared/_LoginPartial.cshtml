@using Microsoft.AspNetCore.Identity
@using TVOnline.Models
@using TVOnline.Services
@inject SignInManager<Users> SignInManager
@inject UserManager<Users> UserManager
@inject IPremiumUserService PremiumUserService

<ul class="ms-auto d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var isPremium = await PremiumUserService.IsUserPremium(user.Id);
        
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index">
                    <i class="bi bi-briefcase"></i> Trang chủ Admin
                </a>
            </li>
        }
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Home" asp-action="BecomeEmployer">
                <i class="bi bi-briefcase"></i> Trở thành nhà tuyển dụng
            </a>
        </li>

        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/images/account-bg.jpg" alt="User Avatar" class="rounded-circle" width="32" height="32">
                <span class="ms-2">@User.Identity.Name</span>
            </a>

            <ul class="dropdown-menu user-dropdown-menu" aria-labelledby="userDropdown">
                <li class="user-info">@User.Identity.Name</li>
                <li><a class="dropdown-item" asp-controller="EditUserProfile" asp-action="Index"><i class="bi bi-person"></i> Chỉnh sửa tài khoản</a></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="AppliedJob"><i class="bi bi-file-earmark-text"></i> CV của tôi</a></li>
                @if (isPremium)
                {
                    <li><a class="dropdown-item" asp-controller="PremiumCV" asp-action="Index"><i class="bi bi-star-fill"></i> Mẫu CV Premium</a></li>
                }
                <li><a class="dropdown-item" asp-controller="Account" asp-action="GetSavedJobs"><i class="bi bi-bookmark"></i> Công việc đã lưu</a></li>
                <li><a class="dropdown-item" asp-controller="AccountStatus" asp-action="Index"><i class="bi bi-person-badge"></i> Trạng thái tài khoản</a></li>
                @if (isPremium)
                {
                    <li><a class="dropdown-item" asp-area="Premium" asp-controller="Home" asp-action="Index"><i class="bi bi-star-fill text-warning"></i> Premium Dashboard</a></li>
                }
                else
                {
                    <li><a class="dropdown-item" asp-controller="Account" asp-action="UpgradeAccount"><i class="bi bi-star"></i> Nâng Cấp tài khoản</a></li>
                }
                <li><a class="dropdown-item" asp-controller="Payment" asp-action="PaymentHistory"><i class="bi bi-credit-card"></i> Lịch sử giao dịch</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right"></i> Đăng xuất</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Login">Đăng nhập</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary me-2" asp-controller="Account" asp-action="Register">Đăng kí</a>
        </li>
    }
</ul>
